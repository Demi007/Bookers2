<h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "100x100"%>
      <table class="table">
          <tbody>
            <tr></tr>
            <tr>
          	  <th>name</th>
          	  <th><%= user.name %></th>
            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%= user.introduction %></th>
            </tr>
            <tr>
              <th>follows</th>
              <th><%= link_to user.followings.count, user_followings_path(user) %></th>
            </tr>
            <tr>
              <th>followers</th>
              <th><%= link_to user.followers.count, user_followers_path(user) %></th>
            </tr>
          </tbody>
          </table>
    <div class="row">
    <% unless current_user == user %>
      <% if current_user.following?(user) %>
       <%= link_to "フォロー外す", user_relationships_path(user), method: :delete, class:"btn btn-info btn-sm btn-block mb-3" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user), method: :post, class:"btn btn-info btn-sm btn-block mb-3" %>
      <% end %>
    <% end %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <span class="fas fa-user-cog"> </span>
    <% end %>
    </div>
