<% book_comments.each do |book_comment| %>
  <% unless book_comment.id.nil? %>
    <p><%= image_tag('no_image.jpg') %></p>
    <p><%= book_comment.user.name %></p>
    <p><%= book_comment.comment %></p>
    <% if book_comment.user == current_user %>
      <%= link_to "削除", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true %>
    <% end %>
  <% end %>
<% end %>