<% if book.favorited_by?(current_user) %>
<p>
  <%= link_to book_favorites_path(book.id), method: :delete, remote: true do %>
    <i class="fas fa-heart favorites-btn like-btn"><%= book.favorites.count %></i>
  <% end %>
</p>
<% else %>
<p>
  <%= link_to book_favorites_path(book.id), method: :post, remote: true do %>
    <i class="fas fa-heart favorites-btn unlike-btn"><%= book.favorites.count %></i>
  <% end %>
</p>
<% end %>